---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";
// 不要になるアイコンを削除し、必要であれば新しいアイコンを追加
import { FaEnvelope, FaXTwitter, FaInstagram } from "react-icons/fa6"; // X(Twitter)とInstagramのアイコンを追加
// import { FaAddressCard, FaPhoneAlt } from "react-icons/fa"; // <-- AddressとPhoneのアイコンはもう使わないのでコメントアウトか削除

const entry = (await getEntry(
  "contact",
  "-index"
)) as CollectionEntry<"contact">;

// config.jsonから必要な情報を取得
const { address, email, phone } = config.contactinfo; // AddressとPhoneはもう表示しないが、もしconfigから削除するならここも調整
const { social } = config; // SNSリンクのためにsocialオブジェクトを取得
const privacy_policy_url = "/privacy-policy/"; // あなたのプライバシーポリシーページのURLに置き換えてください

const { title, description, meta_title, image } = entry.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <section class="section">
    <div class="container">
      <h1 set:html={markdownify(title)} class="h2 page-heading" />
      <div class="row md:gx-5 gy-5">
        
        <div class="sm:col-5 md:col-4">
          <p class="mb-8 text-2xl font-bold text-text-dark">Contact Info</p>
          <ul class="flex flex-col space-y-8">
            
            <li>
              <div class="flex text-text-dark items-center text-xl">
                <FaEnvelope className="mr-3 text-primary" />
                <p class="font-semibold">Email</p>
              </div>
              <p class="mt-2 leading-5 pl-8">
                <a href={`mailto:${email}`} class="text-blue-600 hover:underline">
                  {email}
                </a>
              </p>
            </li>

            {(social.x || social.instagram) && ( // X(Twitter)かInstagramのどちらかが設定されていれば表示
              <li>
                <div class="flex text-text-dark items-center text-xl">
                  {/* アイコンは適宜変更してください */}
                  <p class="font-semibold">SNS</p>
                </div>
                <div class="mt-2 pl-8 flex space-x-4">
                  {social.x && (
                    <a href={social.x} target="_blank" rel="noopener noreferrer" aria-label="X (Twitter)">
                      <FaXTwitter className="text-2xl text-primary hover:text-blue-500 transition-colors" />
                    </a>
                  )}
                  {social.instagram && (
                    <a href={social.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram">
                      <FaInstagram className="text-2xl text-primary hover:text-pink-500 transition-colors" />
                    </a>
                  )}
                  {/* 他のSNSを追加したい場合はここに追加 */}
                </div>
              </li>
            )}

            </ul>
        </div>
        
        <div class="sm:col-7 md:col-8">
          <div class="mb-8">
            <p class="text-lg font-bold text-text-dark">お問い合わせありがとうございます。</p>
            <p class="mt-2 text-base text-gray-700">
              記事に関するご質問、お仕事のご依頼（記事執筆、PR案件など）、その他ご意見・ご感想などがございましたら、下記フォームよりお気軽にご連絡ください。
            </p>
            <p class="mt-4 text-sm text-red-700 font-semibold">
              【ご注意】<br />
              大変恐れ入りますが、個別の投資相談や金融商品の売買に関する助言、ポートフォリオの診断などは行っておりません。<br />
              こうした内容のご連絡にはお返事できかねますので、あらかじめご了承ください。
            </p>
          </div>

          <form
            class="contact-form row gy-2 justify-center"
            method="POST"
            action="https://formspree.io/f/xeovqlnk"
          >
            <div class="lg:col-6">
              <label class="mb-2 block" for="name"
                >お名前 <span class="text-red-600">*</span></label
              >
              <input
                class="form-input w-full"
                name="name"
                type="text"
                required
              />
            </div>
            <div class="lg:col-6">
              <label class="mb-2 block" for="email"
                >メールアドレス <span class="text-red-600">*</span></label
              >
              <input
                class="form-input w-full"
                name="_replyto" // Formspreeで返信先メールアドレスとして認識されるように変更
                type="email"
                required
              />
            </div>
            
            <div class="col-12">
              <label class="mb-2 block" for="category"
                >お問い合わせ種別 <span class="text-red-600">*</span></label
              >
              <select
                class="form-input w-full"
                name="category"
                id="category"
                required
              >
                <option value="">選択してください</option>
                <option value="感想・ご意見">ご感想・ご意見</option>
                <option value="記事に関する質問">記事に関するご質問</option>
                <option value="お仕事のご依頼">お仕事のご依頼（PR、執筆など）</option>
                <option value="その他">その他</option>
              </select>
            </div>

            <div class="col-12">
              <label class="mb-2 block" for="message"
                >メッセージ <span class="text-red-600">*</span></label
              >
              <textarea
                class="form-textarea w-full"
                name="message"
                rows="6" // 行数を少し増やして見やすく
                required></textarea>
            </div>

            <div class="col-12 mt-4">
              <input
                type="checkbox"
                id="privacy-policy-agree"
                name="privacy_policy_agree"
                required
                class="mr-2"
              />
              <label for="privacy-policy-agree" class="text-sm">
                <a href={privacy_policy_url} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">
                  プライバシーポリシー
                </a>に同意します<span class="text-red-600">*</span>
              </label>
            </div>

            <div class="col-12">
              <button class="btn btn-primary mt-6" type="submit">送信する</button> {/* ボタンのテキストも変更 */}
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Base>